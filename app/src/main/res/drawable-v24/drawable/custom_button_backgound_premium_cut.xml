<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
        >
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:angle="-90"
                    android:centerY="0.9"
                    android:endColor="#00FF0000"
                    android:startColor="@color/colorOrange"
                    android:type="linear"/>
        </shape>
    </item>
    <!-- over bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:angle="90"
                    android:centerY="0.9"
                    android:endColor="#00FF0000"
                    android:startColor="#bf0b0b"
                    android:type="linear"/>
        </shape>
    </item>
    <item android:drawable="@drawable/ic_background_premium">
    </item>

</layer-list>